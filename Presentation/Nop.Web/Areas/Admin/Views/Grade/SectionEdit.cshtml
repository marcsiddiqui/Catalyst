@using Nop.Web.Areas.Admin.Models.GradeManagement
@model SectionModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Sections.Sections.EditSectionDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Sections");
}

<form asp-controller="Grade" asp-action="SectionEdit" method="post" id="section-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Sections.Sections.EditSectionDetails") - @Model.Id
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Sections.Sections.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="section-delete" class="btn btn-danger">
                <i class="far fa-trash-can"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate.Section", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="section-delete" />