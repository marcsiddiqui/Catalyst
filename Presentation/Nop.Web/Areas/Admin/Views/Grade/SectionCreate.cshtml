@using Nop.Web.Areas.Admin.Models.GradeManagement
@model SectionModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Sections.Sections.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Sections");
}

<form asp-controller="Grade" asp-action="SectionCreate" method="post" id="section-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Sections.Sections.AddNew") 
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="SectionList">@T("Admin.Sections.Sections.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>