@using Nop.Web.Areas.Admin.Models.GradeManagement
@model SectionModel

@{
    const string hideInfoBlockAttributeName = "SectionPage.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);
}

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <nop-cards id="section-cards">
                <nop-card asp-name="section-info" asp-icon="fas fa-info" asp-title="@T("Admin.Sections.Sections.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Section.Info", Model)</nop-card>
            </nop-cards>
        </div>
    </div>
</section>