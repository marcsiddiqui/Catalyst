@using Nop.Web.Areas.Admin.Models.GenericDropDowns
@model GenericDropDownOptionModel

<div class="card-body">
    @(await Html.LocalizedEditorAsync<GenericDropDownOptionModel, GenericDropDownOptionLocalizedModel>("genericDropDownOption-info-localized",
        @<div>
            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="@Model.Locales[item].Text"/>
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="@Model.Locales[item].Text"/>
                    <span asp-validation-for="@Model.Locales[item].Text"></span>
                </div>
            </div>


            <div>
                <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
            </div>
        </div>
    ,
        @<div>
            <div class="form-group row">
                <div class="col-md-3">
                    <nop-label asp-for="Text"/>
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Text" asp-required="true"/>
                    <span asp-validation-for="Text"></span>
                </div>
            </div>


        </div>
    ))
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="EntityId"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="EntityId"/>
            <span asp-validation-for="EntityId"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Text"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Text"/>
            <span asp-validation-for="Text"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Value"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Value"/>
            <span asp-validation-for="Value"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="OrderBy"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="OrderBy"/>
            <span asp-validation-for="OrderBy"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Color"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Color"/>
            <span asp-validation-for="Color"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="IsSystemOption"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="IsSystemOption"/>
            <span asp-validation-for="IsSystemOption"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="CreatedOnUtc"/>
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="CreatedOnUtc"/>
            <span asp-validation-for="CreatedOnUtc"></span>
        </div>
    </div>


</div>