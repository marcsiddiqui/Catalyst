@using Nop.Web.Areas.Admin.Models.GenericDropDowns
@model GenericDropDownOptionModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.GenericDropDowns.GenericDropDownOptions.EditGenericDropDownOptionDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("GenericDropDownOptions");
}

<form asp-controller="GenericDropDownOption" asp-action="Edit" method="post" id="genericDropDownOption-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.GenericDropDowns.GenericDropDownOptions.EditGenericDropDownOptionDetails") - @Model.Id
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.GenericDropDowns.GenericDropDownOptions.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="genericDropDownOption-delete" class="btn btn-danger">
                <i class="far fa-trash-can"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="genericDropDownOption-delete" />