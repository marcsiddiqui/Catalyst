@using Nop.Web.Areas.Admin.Models.AcademicYears
@model AcademicYearTermModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Academics.AcademicYearTerms.EditAcademicYearTermDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("AcademicYearTerms");
}

<form asp-controller="AcademicYearTerm" asp-action="Edit" method="post" id="academicYearTerm-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Academics.AcademicYearTerms.EditAcademicYearTermDetails") - @Model.Id
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Academics.AcademicYearTerms.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-floppy-disk"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="academicYearTerm-delete" class="btn btn-danger">
                <i class="far fa-trash-can"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate.AcademicYearTermEdit", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="academicYearTerm-delete" />