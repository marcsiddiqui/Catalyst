@using Nop.Web.Areas.Admin.Models.Subjects
@model SubjectSearchModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Subjects.Subjects").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Subjects");
}


<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Subjects.Subjects")
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-square-plus"></i>
            @T("Admin.Common.AddNew")
        </a>
        <button type="button" id="activate-selected" class="btn bg-teal">
            <i class="fas fa-square-check"></i>
            @T("Admin.Subjects.Subjects.ActivateSelected")
        </button>
        <button type="button" id="deactivate-selected" class="btn btn-secondary">
            <i class="fas fa-square-minus"></i>
            @T("Admin.Subjects.Subjects.DeactivateSelected")
        </button>

    </div>
</div>

<section class="content">
    <div class="container-fluid">
    <div class="form-horizontal">
        <div class="cards-group">
            <div class="card card-default">
                <div class="card-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                        Name = "subjects-grid",
                        UrlRead = new DataUrl("SubjectList", "Subject", null),
                        SearchButtonId = "search-categories",
                        Length = Model.PageSize,
                        LengthMenu = Model.AvailablePageSizes,
                        ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(SubjectModel.Id))
                            {
                                IsMasterCheckBox = true,
                                Render = new RenderCheckBox("checkbox_subjects"),
                                ClassName =  NopColumnClassDefaults.CenterAll,
                                Width = "50"
                            },
                            new ColumnProperty(nameof(SubjectModel.Name))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.Name").Text,
                                Width = "100",
                            },

                            new ColumnProperty(nameof(SubjectModel.IsActive))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.IsActive").Text,
                                Width = "100",
                                ClassName =  NopColumnClassDefaults.CenterAll,
                            },

                            new ColumnProperty(nameof(SubjectModel.Deleted))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.Deleted").Text,
                                Width = "100",
                                ClassName =  NopColumnClassDefaults.CenterAll,
                            },

                            new ColumnProperty(nameof(SubjectModel.CreatedBy))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.CreatedBy").Text,
                                Width = "100",
                            },

                            new ColumnProperty(nameof(SubjectModel.CreatedOnUtc))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.CreatedOnUtc").Text,
                                Width = "100",
                            },

                            new ColumnProperty(nameof(SubjectModel.UpdatedBy))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.UpdatedBy").Text,
                                Width = "100",
                            },

                            new ColumnProperty(nameof(SubjectModel.UpdatedOnUtc))
                            {
                                Title = T("Admin.Subjects.Subjects.Fields.UpdatedOnUtc").Text,
                                Width = "100",
                            },


                            new ColumnProperty(nameof(SubjectModel.Id))
                            {
                                Title = T("Admin.Common.Edit").Text,
                                Width = "50",
                                ClassName =  NopColumnClassDefaults.Button,
                                Render = new RenderButtonEdit(new DataUrl("~/Admin/Subject/Edit"))
                            }
                        }
                    })

                    <script>
                        $(function() {
                            //"activate selected" button
                            $('#activate-selected').click(function (e) {
                                e.preventDefault();

                                var postData = {
                                    selectedIds: selectedIds
                                };
                                addAntiForgeryToken(postData);

                                $.ajax({
                                    cache: false,
                                    type: "POST",
                                    url: "@(Url.Action("ActivateSelected", "Subject"))",
                                    data: postData,
                                    traditional: true,
                                    complete: function (jqXHR, textStatus) {
                                        if (jqXHR.status === 204)
                                        {
                                            showAlert('nothingSelectedAlert', '@T("Admin.Common.Alert.NothingSelected")');
                                            return;
                                        }
                                        updateTable('#subjects-grid');
                                    },
                                    error: function (jqXHR, textStatus, errorThrown) {
                                        showAlert('activateSelectedFailed', errorThrown);
                                    }
                                });
                                return false;
                            });

                            //"deactivate selected" button
                            $('#deactivate-selected').click(function (e) {
                                e.preventDefault();

                                var postData = {
                                    selectedIds: selectedIds
                                };
                                addAntiForgeryToken(postData);

                                $.ajax({
                                    cache: false,
                                    type: "POST",
                                    url: "@(Url.Action("DeactivateSelected", "Subject"))",
                                    data: postData,
                                    traditional: true,
                                    error: function (jqXHR, textStatus, errorThrown) {
                                        showAlert('deactivateSelectedFailed', errorThrown);
                                    },
                                    complete: function (jqXHR, textStatus) {
                                        if (jqXHR.status === 204)
                                        {
                                            showAlert('nothingSelectedAlert', '@T("Admin.Common.Alert.NothingSelected")');
                                            return;
                                        }
                                        updateTable('#subjects-grid');
                                    }
                                });
                                return false;
                            });
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
<nop-alert asp-alert-id="activateSelectedFailed" />
<nop-alert asp-alert-id="deactivateSelectedFailed" />
<nop-alert asp-alert-id="nothingSelectedAlert" />
